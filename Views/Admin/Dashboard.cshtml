


@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-4">
    <h2>Personel Yönetimi</h2>
    
    <!-- Personel Ekleme Formu -->
    <div class="card mb-4">
        <div class="card-header">
            <h4>Yeni Personel Ekle</h4>
        </div>
        <div class="card-body">
            <form >
                <div class="row">
                    <div class="col-md-3">
                        <input type="text" name="Name" class="form-control" placeholder="Ad Soyad" required />
                    </div>
                    
                    <div class="col-md-3">
                        <input type="email" name="Email" class="form-control" placeholder="E-posta" required />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-success">Ekle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Personel Listesi -->
    <div class="card">
        <div class="card-header">
            <h4>Personel Listesi</h4>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        
                        <th>E-posta</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var person in Model.Personnel)
                    {
                        <tr>
                            <td>@person.Name</td>
                            
                            <td>@person.Email</td>
                            <td>
                                <form asp-action="DeletePersonnel" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@person.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>